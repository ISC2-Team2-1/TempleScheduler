
@{
    string[] times = {"8:00am - 9:00am","9:00am - 10:00am","10:00am - 11:00am","11:00am - 12:00pm",
        "12:00pm - 1:00pm","1:00pm - 2:00pm","2:00pm - 3:00pm","3:00pm - 4:00pm","4:00pm - 5:00pm",
        "5:00pm - 6:00pm","6:00pm - 7:00pm","7:00pm - 8:00pm","8:00pm - 9:00pm",
    };

    foreach(var x in ViewBag.TimesList)
    {
        for (var iCount = 0; iCount < times.Length; iCount++)
        {
            if (x.Timeslots == times[iCount])
            {
                List<string> timesList = new List<string>(times);
                timesList.RemoveAt(iCount);
                times = timesList.ToArray();
                iCount--;
            }
        }
    }
}

@model TempleScheduler.Models.AvailableTime

<body>
    <br /><br /><br /><br /><br /><br />
    <form asp-action="SignUp" method="post" class="center">
        <div class="text-center">
            <label name="Timeslots">Choose an available time slot:</label>
            <select name="Timeslots" id="Timeslots" asp-for="Timeslots" required>
                <option value="none" style="display:none" disabled="disabled" selected="selected">Select One:</option>
                @for (var iCount = 0; iCount < times.Length; iCount++)
                {
                    <option value="@times[iCount]">@times[iCount]</option>
                }
            </select>
            <br />
            <div class="text-center">
                <button type="submit">Continue</button>
            </div>
            <div asp-validation-summary="All"></div>
            <img src="~/img/Come.png" alt="Come Follow Me" height="500" width="400" />
        </div>
    </form>
</body>