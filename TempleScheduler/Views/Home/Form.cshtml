@{
}

@model TempleScheduler.Models.Group

<div>
    <br /><br /><br /><br /><br /><br />
    <h1 class="col-3 text-center">Come</h1>
    <h1 class="col-3 text-center">Follow</h1>
    <h1 class="col-3 text-center">Christ</h1>
    <br /><br /><br />

    <form asp-action="Form" method="post" class="center">
        <div class="text-center">
            <label>Here is the time you selected:</label>
            @Model.AvailableTime
        </div>

        <p class="text-center"> Please fill out the form below to complete your appointment application.</p>

        <div class="text-center">
            <label asp-for="GroupName">Group Name:</label>
            <input asp-for="GroupName" />
        </div>

        <div class="text-center">
            <label asp-for="GroupSize">Group Size:</label>
            <input asp-for="GroupSize" />
        </div>

        <div class="text-center">
            <label asp-for="EmailAddr">Email:</label>
            <input asp-for="EmailAddr" />
        </div>

        <div class="text-center">
            <label asp-for="PhoneNum">Phone Number(Optional):</label>
            <input asp-for="PhoneNum" />
        </div>

        <div class="text-center">
            <button type="submit" asp-action="Index">Submit</button>
        </div>

        <div class="text-center" asp-validation-summary="All"></div>

    </form>
</div>
