@{
    @ViewBag
}

@model List<TempleScheduler.Models.Group>



<div class="text-center">
    <br /><br /><br /><br /><br />
    <h1>Appointment Application Received! </h1>

    <br /><br />
    <p>Here are the detailed info of your reserved visit:</p>
</div>
<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6"></div>
    <table class="table table-striped" style="padding:0 27rem 27rem">
        <thead class="text-center">
            <tr><th>Group</th><th>Size</th><th>Phone</th><th>Email</th><th>Time Slot</th></tr>
        </thead>
        <tbody>
            <!--This pulls in data from the database for the page selected-->
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.GroupName</td>
                    <td>@x.GroupSize</td>
                    <td>@x.PhoneNum</td>
                    <td>@x.EmailAddr</td>
                    <td>@x.Timeslots.Timeslots</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-md-3"></div>
</div>

